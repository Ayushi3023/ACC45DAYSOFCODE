#include <iostream>
#include<math.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n,a,b;
	    cin>>n>>a>>b;
	    int count=0;
	
	    while(n!=1){
	        n=n/2;
	        count++;
	    }
	    cout<<(count*a)+((count-1)*b)<<endl;
	}
	
	return 0;
}
